#!/bin/bash

if [ "$1" != "-e" ]
then
    out='echo -e'
else
    out=espeak
fi

if [ "$1" != "-n" ]
then
  $out "update"
  sudo apt update
fi
$out "upgrade"
sudo apt upgrade -y
$out "clean"
sudo aptitude autoclean
$out "\ndeep-clean"
sudo apt-get autoremove --purge
$out "\nTrim"
sudo fstrim -av

