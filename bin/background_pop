#!/bin/bash
BG=`pidof -x background_pop -o %PPID`
CMD="feh --bg-max -z /home/jeffery/Pictures/Backgrounds/*" #/media/BFD/Pictures/backgrounds/*


for PIDS_FOUND in $BG
do
   echo killing $PIDS_FOUND
   kill $PIDS_FOUND
   sleep 1
   kill -9 $PIDS_FOUND
done

$CMD
while sleep 900
do
   $CMD
    #wal-steam -w
   #sleep 5;
done

