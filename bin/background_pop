#!/bin/bash
BG=`pidof -x background_pop -o %PPID`

for PIDS_FOUND in $BG
do
   echo killing $PIDS_FOUND
   kill $PIDS_FOUND
   sleep 1
   kill -9 $PIDS_FOUND
done

while feh --bg-max -z /home/jeffery/Pictures/Backgrounds/* #/media/BFD/Pictures/backgrounds/*
#while wal -i /home/jeffery/Pictures/Backgrounds
do
   #wal-steam -w
   #sleep 5;
   `sleep 900` >/dev/null 2>&1 ;
done

